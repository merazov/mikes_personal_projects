<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="customerService"
		class="com.mike.aop.springaop.xml.CustomerService">
		<property name="name" value="Miguel Erazo" />
		<property name="url" value="http://www.amazon.com" />
	</bean>

	<bean id="hijackBeforeMethodBean"
		class="com.mike.aop.springaop.xml.HijackBeforeMethod" />

	<bean id="customerServiceProxy"
		class="org.springframework.aop.framework.ProxyFactoryBean">

		<property name="target" ref="customerService" />

		<property name="interceptorNames">
			<list>
				<value>hijackBeforeMethodBean</value>
			</list>
		</property>
	</bean>

</beans>
